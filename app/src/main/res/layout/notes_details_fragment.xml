<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:orientation="vertical">

    <LinearLayout
        android:id="@+id/notes_framgent_sigle_layout"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/black_gray">

        <TextView
            android:id="@+id/notes_fragment_sigle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_vertical"
            android:gravity="center_horizontal"
            android:text="GTI619"
            android:textColor="@color/gray"
            android:singleLine="true"
            android:textSize="28sp"/>

        <me.grantland.widget.AutofitTextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/note_fragment_titre_cours"
            android:singleLine="true"
            android:textColor="@color/gray"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_vertical"
            android:gravity="center_horizontal"
            android:textSize="16sp"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            />
    </LinearLayout>

    <ListView
        android:id="@android:id/list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/notes_framgent_sigle_layout"
        android:divider="@color/black_gray"
        android:dividerHeight="1dp"
        android:padding="10dp"/>

    <ProgressBar
        android:id="@+id/progressBar_notes_details"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"/>
</RelativeLayout>
