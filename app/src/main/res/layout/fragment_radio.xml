<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >


    <TextView
        android:id="@+id/tv_desc_radio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="26dp"
        android:layout_margin="40dp"
        android:textStyle="bold"
        android:text="@string/desc_radio"/>

    <ImageView
        android:id="@+id/iv_radio"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@id/tv_desc_radio"
        android:layout_centerHorizontal="true"
        android:src="@drawable/piranha_black"
        />

    <Button
        android:id="@+id/bt_radio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/listing"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/iv_radio"
        android:layout_alignRight="@+id/iv_radio"
        android:padding="10dp"
        android:textColor="@color/white"
        android:background="@color/black"/>


</RelativeLayout>