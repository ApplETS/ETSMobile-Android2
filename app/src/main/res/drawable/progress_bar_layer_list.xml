<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@+id/background">
        <shape>
            <gradient
                android:startColor="@color/black_gray"
                android:centerColor="@color/black_gray"
                android:endColor="@color/black_gray" />
        </shape>
    </item>
    <item android:id="@+id/progress">
        <clip>
            <shape>
                <gradient
                    android:startColor="@color/ets_red"
                    android:centerColor="@color/ets_red"
                    android:endColor="@color/ets_red" />
            </shape>
        </clip>
    </item>
</layer-list>