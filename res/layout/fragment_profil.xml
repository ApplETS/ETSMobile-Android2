<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray" >
    
    <ImageView 
        android:id="@+id/profil_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_ico_profil"/>
    
    <Button 
	    android:id="@+id/profil_button_logout"
	    android:layout_width="fill_parent"
	    android:layout_height="50dp"
	    android:layout_alignParentBottom="true"
	    android:background="@color/black_gray"
	    android:textColor="@color/gray"
	    android:text="@string/profil_logout" />
    <RelativeLayout
        android:id="@+id/profil_layout_info"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_marginLeft="30dp"
	    android:layout_marginRight="30dp"
	    android:layout_marginTop="10dp"
	    android:paddingBottom="5dp"
        android:layout_below="@+id/profil_image"
        android:layout_above="@+id/profil_button_logout">
        <ScrollView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="1dp"
            android:background="#A0A0A0">
	    <LinearLayout
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:orientation="vertical"
	        android:padding="10dp" 
	        android:background="#fff">
			<RelativeLayout 
			    android:id="@+id/profil_nom_prenom_layout"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content">
			    <TextView 
			        android:id="@+id/profil_nom_prenom_text"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_alignParentLeft="true"
			        android:textStyle="bold"
			        android:textSize="16sp"
			        android:gravity="center_vertical"
			        android:text="@string/profil_nom_prenom"/>
			    <TextView 
			        android:id="@+id/profil_nom_prenom_item"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_alignParentRight="true"
			        android:gravity="center_vertical"
			        android:maxWidth="150dp"
			        android:textSize="16sp" 
			        android:text="@null"/> 
			</RelativeLayout>
			<RelativeLayout 
			    android:id="@+id/profil_code_permanent_layout"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:paddingTop="5dp">
			    <TextView 
			        android:id="@+id/profil_code_permanent_text"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_alignParentLeft="true"
			        android:gravity="center_vertical"
			        android:textStyle="bold"
			        android:textSize="16sp"
			        android:text="@string/profil_code_permanent"/>
			    <TextView 
			        android:id="@+id/profil_code_permanent_item"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_alignParentRight="true"
			        android:gravity="center_vertical"
			        android:textSize="16sp" 
			        android:text="@null"/> 
			</RelativeLayout>
			<RelativeLayout 
			    android:id="@+id/solde_layout"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:paddingTop="5dp">
			    <TextView 
			        android:id="@+id/profil_solde_text"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_alignParentLeft="true"
			        android:gravity="center_vertical"
			        android:textStyle="bold"
			        android:textSize="16sp" 
			        android:text="@string/profil_solde"/>
			    <TextView 
			        android:id="@+id/profil_solde_item"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_alignParentRight="true"
			        android:gravity="center_vertical"
			        android:textSize="16sp" 
			        android:text="@null"/> 
			</RelativeLayout>
			<RelativeLayout 
			    android:id="@+id/profil_programme_layout"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:paddingTop="5dp">
			    <TextView 
			        android:id="@+id/profil_programme_text"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_alignParentLeft="true"
			        android:gravity="center_vertical"
			        android:textStyle="bold"
			        android:textSize="16sp" 
			        android:text="@string/profil_programme"/>
			    <TextView 
			        android:id="@+id/profil_programme_item"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:gravity="center_vertical|right"
			        android:maxWidth="150dp"
			        android:layout_alignParentRight="true"
			        android:textSize="16sp" 
			        android:text="@null"/> 
			</RelativeLayout>
			<RelativeLayout 
			    android:id="@+id/profil_cours_equivalent_layout"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:paddingTop="5dp">
			    <TextView 
			        android:id="@+id/profil_cours_equivalent_text"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_alignParentLeft="true"
			        android:textStyle="bold"
			        android:textSize="16sp" 
			        android:gravity="center_vertical"
			        android:text="@string/profil_cours_equivalent"/>
			    <TextView 
			        android:id="@+id/profil_cours_equivalent_item"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_alignParentRight="true"
			        android:gravity="center_vertical"
			        android:textSize="16sp" 
			        android:text="@null"/> 
			</RelativeLayout>
			
			<RelativeLayout 
			    android:id="@+id/profil_cours_reussis_layout"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:paddingTop="5dp">
			    <TextView 
			        android:id="@+id/profil_cours_reussis_text"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_alignParentLeft="true"
			        android:textStyle="bold"
			        android:textSize="16sp" 
			        android:gravity="center_vertical"
			        android:text="@string/profil_cours_reussis"/>
			    <TextView 
			        android:id="@+id/profil_cours_reussis_item"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_alignParentRight="true"
			        android:gravity="center_vertical"
			        android:textSize="16sp" 
			        android:text="@null"/> 
			</RelativeLayout>
					
			<RelativeLayout 
			    android:id="@+id/profil_credit_echoue_layout"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:paddingTop="5dp">
			    <TextView 
			        android:id="@+id/profil_credit_echoue_text"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_alignParentLeft="true"
			        android:gravity="center_vertical"
			        android:textStyle="bold"
			        android:textSize="16sp"
			        android:text="@string/profil_cours_echoue"/>
			    <TextView 
			        android:id="@+id/profil_credit_echoue_item"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_alignParentRight="true"
			        android:layout_centerVertical="true"
			        android:gravity="center_vertical"
			        android:textSize="16sp" 
			        android:text="@null"/> 
			</RelativeLayout>
			<RelativeLayout 
			    android:id="@+id/profil_credit_reussis_layout"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:paddingTop="5dp">
			    <TextView 
			        android:id="@+id/profil_credit_reussis_text"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_alignParentLeft="true"
			        android:textStyle="bold"
			        android:gravity="center_vertical"
			        android:textSize="16sp"
			        android:text="@string/profil_credit_reussis"/>
			    <TextView 
			        android:id="@+id/profil_credit_reussis_item"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_alignParentRight="true"
			        android:gravity="center_vertical"
			        android:textSize="16sp" 
			        android:text="@null"/> 
			</RelativeLayout>
		
			<RelativeLayout 
			    android:id="@+id/profil_credit_inscrit_layout"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:layout_marginTop="5dp">
			    <TextView 
			        android:id="@+id/profil_credit_inscrit_text"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_alignParentLeft="true"
			        android:textStyle="bold"
			        android:textSize="16sp"
			        android:gravity="center_vertical"
			        android:text="@string/profil_credit_inscrit"/>
			    <TextView 
			        android:id="@+id/profil_credit_inscrit_item"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_alignParentRight="true"
			        android:textSize="16sp" 
			        android:gravity="center_vertical"
			        android:text="@null"/> 
			</RelativeLayout>
			<RelativeLayout 
			    android:id="@+id/profil_credit_potentiel_layout"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:paddingTop="5dp">
			    <TextView 
			        android:id="@+id/profil_credit_potentiel_text"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_alignParentLeft="true"
			        android:textStyle="bold"
			        android:textSize="16sp"
			        android:gravity="center_vertical"
			        android:text="@string/profil_credit_potentiel"/>
			    <TextView 
			        android:id="@+id/profil_credit_potentiel_item"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_alignParentRight="true"
			        android:textSize="16sp" 
			        android:gravity="center_vertical"
			        android:text="@null"/> 
			</RelativeLayout>
			<RelativeLayout 
			    android:id="@+id/profil_moyenne_layout"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:paddingTop="5dp">
			    <TextView 
			        android:id="@+id/profil_moyenne_text"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_alignParentLeft="true"
			        android:textStyle="bold"
			        android:textSize="16sp"
			        android:gravity="center_vertical"
			        android:text="@string/profil_moyenne"/>
			    <TextView 
			        android:id="@+id/profil_moyenne_item"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_alignParentRight="true"
			        android:textSize="16sp"
			        android:gravity="center_vertical"
			        android:text="@null"/> 
			</RelativeLayout>
		</LinearLayout>
	</ScrollView>
 </RelativeLayout>

</RelativeLayout>
